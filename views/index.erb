<h1 class="display-4 py-3 mb-3 border-bottom">
  <%= title %>
</h1>

<form method="post" action="flash">
  <div class="form-group">
    <label for="message">Write a message here:</label>
    <textarea class="form-control" name="message" id="message" placeholder="Hello World"></textarea>
    <small class="form-text text-muted">This message will be posted to the <code>/flash</code> controller.</small>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Flash!</button>
  </div>
</form>